<% if @user.errors.any? %>
	<h2><%= pluralize(@user.errors.count, "error") %> prevented this user from being created: </h2>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @user do |f| %>
	<%= f.label :username, "Username:" %><br>
	<%= f.text_field :username %><br>
	<%= f.label :email, "Email:" %><br>
	<%= f.text_field :email %><br>
	<%= f.label :password, "Password:" %><br>
	<%= f.text_field :password %><br>
	<%= f.submit "Submit" %>
<% end %>

